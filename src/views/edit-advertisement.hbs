<section class="pt-[72px] h-full flex flex-col">
  <div class="w-full bg-[#f2f4f5]">
    <form id="edit-ad-form" class="pb-4" method="post" enctype="multipart/form-data">
      <div class="flex flex-1 flex-col px-4 pb-10 max-w-[1302px] mx-auto">
        <h2 class="font-bold text-[32px] leading-[34px] text-[#002f34] m-[48px_0_30px]">Редагувати оголошення</h2>

        <input type="hidden" id="userId" name="userId" value="{{user.userId}}">
        <input type="hidden" id="advertisementId" name="advertisementId" value="{{advertisement.advertisementId}}">

        <div class="bg-[rgb(255,255,255)] rounded-[4px] mb-[10px] p-[32px] box-border">
          <div class="flex gap-[16px]">
            <div class="flex flex-col gap-[16px] box-border mr-[32px] basis-[69%] w-full">
              <div>
                <h4 class="text-xl font-medium text-[#002f34] mb-4">Опишіть у подробицях</h4>
                <div>
                  <label class="text-sm text-[#002f34] block mb-1">Вкажіть назву*</label>
                  <input name="title" id="title" class="text-[#002f34] bg-[#f2f4f5] outline-none placeholder:text-gray-500 rounded-md px-4 py-[14px] w-full" placeholder="Наприклад, iPhone 11 з гарантією" value="{{advertisement.title}}"></input>
                </div>
                <div class="text-sm text-[#406367] flex justify-between w-full mt-1 pt-0.5">
                  Введіть щонайменше 16 символів
                  <span>0/70</span>
                </div>
              </div>
              
              <div>
                <label class="mt-2 mb-2 block text-[#002f34] text-sm">Категорія*</label>
                <select id="category" name="categoryId" class="bg-[#f2f4f5] px-4 py-[14px] rounded-md text-[#406367] w-[392px]">
                  <option value="" selected disabled hidden>Виберіть категорію</option>
                  
                  {{#each categories}}
                  <option value="{{this.categoryId}}" {{#if (equals this.categoryId ../advertisement.categoryId)}}selected{{/if}}>
                    {{this.name}}
                  </option>
                  {{/each}}
                </select>
              </div>
            </div>
            <div class="grid grid-cols-4 gap-[16px] box-border ml-[32px] basis-[31%]"></div>
          </div>
        </div>

        <div class="bg-[rgb(255,255,255)] rounded-[4px] mb-[10px] p-[32px] box-border">
          <div class="flex gap-[16px]">
            <div class="flex flex-col gap-[16px] box-border mr-[32px] basis-[69%] w-full">
              <div>
                <h4 class="text-xl font-medium text-[#002f34] mb-1">Фото</h4>
                <p class="text-sm text-[#406367]">Перше фото буде на обкладинці оголошення.</p>
                <div class="mt-2">
                  <input type="file" name="images" id="images" accept="image/*" multiple />                  
                </div>
              </div>
            </div>
            <div class="grid grid-cols-4 gap-[16px] box-border ml-[32px] basis-[31%]"></div>
          </div>
        </div>

        <div class="bg-[rgb(255,255,255)] rounded-[4px] mb-[10px] p-[32px] box-border">
          <div class="flex gap-[16px]">
            <div class="flex flex-col gap-[16px] box-border mr-[32px] basis-[69%] w-full">
              <div>
                <div>
                  <label class="text-sm text-[#002f34] block mb-1">Опис*</label>
                  <textarea name="description" id="description" class="h-[248px] w-full text-[#002f34] bg-[#f2f4f5] outline-none placeholder:text-gray-500 rounded-md px-4 py-[14px] resize-none" placeholder="Подумайте, що ви хотіли би дізнатися з оголошення. І додайте це в опис">{{advertisement.description}}</textarea>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-4 gap-[16px] box-border ml-[32px] basis-[31%]"></div>
          </div>
        </div>

        <div class="bg-[rgb(255,255,255)] rounded-[4px] mb-[10px] p-[32px] box-border">
          <div class="flex gap-[16px]">
            <div class="flex flex-col gap-[16px] box-border mr-[32px] basis-[69%] w-full">
              <div>
                <div>
                  <label class="text-sm text-[#002f34] block mb-1">Ціна*</label>
                  <input name="price" id="price" class="w-[392px] text-[#002f34] bg-[#f2f4f5] outline-none placeholder:text-gray-500 rounded-md px-4 py-[14px]" value="{{advertisement.price}}"></input>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-4 gap-[16px] box-border ml-[32px] basis-[31%]"></div>
          </div>
        </div>

        <div class="bg-[rgb(255,255,255)] rounded-[4px] mb-[10px] p-[32px] box-border">
          <div class="flex gap-[16px]">
            <div class="flex flex-col gap-[16px] box-border mr-[32px] basis-[69%] w-full">
              <div>
                <div>
                  <label class="text-sm text-[#002f34] block mb-1">Місцезнаходження*</label>
                  <input name="location" id="location" class="w-[392px] text-[#002f34] bg-[#f2f4f5] outline-none placeholder:text-gray-500 rounded-md px-4 py-[14px]" placeholder="Назва міста й індекс" value="{{advertisement.location}}"></input>
                </div>
              </div>
            </div>
            <div class="grid grid-cols-4 gap-[16px] box-border ml-[32px] basis-[31%]"></div>
          </div>
        </div>

        <div class="bg-[rgb(255,255,255)] rounded-[4px] mb-[10px] p-[32px] box-border">
          <div class="flex items-baseline justify-end gap-12">
            <button class="bg-[#002F34] text-white font-semibold text-base py-3 px-8 rounded cursor-pointer" type="submit">Редагувати</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<script src="/js/edit-advertisement.js"></script>