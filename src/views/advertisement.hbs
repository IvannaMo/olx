<section class="pt-[72px] h-full flex flex-col">
  <div class="w-full bg-[#f2f4f5] flex-grow">
    <div class="mx-auto max-w-[1238px] p-6 pb-20">
      <div class="grid w-full bg-inherit grid-cols-12 gap-6 place-items-stretch">
        <div class="flex items-center w-full relative mb-6 p-0 col-span-12">
          <button id="back-button" class="flex items-center justify-start text-[rgb(0,47,52)] text-[14px] font-medium leading-[18px] no-underline bg-transparent p-0 border-0 cursor-pointer mr-[22px] min-h-[40px]">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1em" height="1em" class="w-6 h-6 mr-1 text-[rgb(0,47,52)]">
              <path fill="currentColor" fill-rule="evenodd" d="m15.547 2-1.305 1.27L6 11.293v1.414l8.242 8.022L15.547 22H17v-1.414l-1.305-1.271L8.18 12l7.515-7.316L17 3.414V2z"></path>
            </svg>
            Назад
          </button>
        </div>
      </div>

      <div class="grid grid-cols-12 gap-x-4 w-full bg-inherit items-stretch">
        <div class="w-full col-span-8 relative mb-6 p-0">
          <div class="relative rounded-md p-6 bg-white mb-6">
            <div class="mx-auto relative overflow-hidden list-none p-0 z-10 block touch-pan-y h-full">
              <div class="list-none relative w-full h-full z-10 flex transition-transform transform">
                <div class="relative flex-shrink-0 h-full block transform-gpu backface-hidden w-full">
                  <div id="image-slider" data-images="{{jsonStringify advertisement.images}}" class="relative w-full h-full flex justify-center items-center text-center">
                    <button id="previous-image-button" class="absolute top-1/2 left-2.5 z-10 flex items-center justify-center bg-[#F2F4F5] border border-[#F2F4F5] rounded w-8 h-[34px] cursor-pointer">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6 text-[#002F34]">
                        <path fill="currentColor" fill-rule="evenodd" d="m15.547 2-1.305 1.27L6 11.293v1.414l8.242 8.022L15.547 22H17v-1.414l-1.305-1.271L8.18 12l7.515-7.316L17 3.414V2z"></path>
                      </svg>
                    </button>
                    {{#each advertisement.images}}
                      {{#if @first}}
                      <img id="current-image" 
                          src="{{this.imageUrl}}" 
                          sizes="(min-width: 1100px) 992px, (min-width: 780px) 516px, 100vw" 
                          class="w-full h-[583px] max-w-full max-h-full object-contain cursor-pointer rounded-[2px] p-0.5 align-middle text-center">
                      {{/if}}
                    {{/each}}
                    <button id="next-image-button" class="absolute top-1/2 right-2.5 z-10 flex items-center justify-center bg-[#F2F4F5] border border-[#F2F4F5] rounded w-8 h-[34px] cursor-pointer">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6 text-[#002F34]">
                        <path fill="currentColor" fill-rule="evenodd" d="M7 2v1.414l1.271 1.27L15.586 12l-7.315 7.315L7 20.585V22h1.414l1.27-1.271L17 13.414l1-1v-.827l-3.942-3.942v-.001L9.686 3.271 8.413 2z"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="p-6 mb-6 bg-white rounded-[4px] overflow-hidden">
            <div class="mt-6">
              <h3 class="text-primary font-semibold uppercase text-2xl leading-6 mb-4">Опис</h3>
              <div class="text-primary text-base leading-6 break-words">
                {{advertisement.description}}
              </div>
            </div>

            <div class="border-t border-gray-400 mt-6">
              <div class="flex justify-center px-0 py-4">
                <span class="text-center text-xs text-gray-600">Переглядів: {{advertisement.views}}</span>
              </div>
            </div>
          </div>

          <div class="flex flex-col items-stretch p-8 bg-white font-sans antialiased">
            <div class="flex justify-between font-sans antialiased">
              <div class="overflow-hidden font-sans antialiased">
                <p class="text-[#00302f] font-sans font-bold text-base uppercase leading-5 mb-4">
                  Зв’язатися з продавцем
                </p>
                <div class="css-1ucpzm6 flex-grow overflow-hidden bg-inherit">
                  <a href="/" class="flex text-[#0198d0] no-underline">
                    <div class="flex items-center bg-white">
                      <div class="mr-4 relative">
                        <div class="relative w-[72px] h-[72px] rounded-full overflow-hidden">
                          <img src="{{#if advertisement.user.profileImageUrl}}{{advertisement.user.profileImageUrl}}{{else}}/icons/user-icon.svg{{/if}}" class="w-full h-full object-cover" />
                        </div>
                      </div>
                      <div class="overflow-hidden">
                        <h4 class="text-[#002f34] text-[20px] leading-[22px] font-normal mb-1 truncate">{{advertisement.user.name}}</h4>
                        <p class="text-[#406367] text-[14px] leading-[18px] mb-1">на OLX з <span>{{formatDateShort advertisement.user.registrationDate}}</span></p>
                        <div class="text-[#7f9799] text-[12px] leading-[16px]"> 
                          <p class="text-[#406367] text-[14px] leading-[18px]">{{#if (equals advertisement.user.status "online")}}Онлайн{{/if}}</p>
                        </div>
                      </div>
                    </div>
                  </a>
                </div>
              </div>

              <div class="ml-2 flex flex-col flex-grow flex-shrink-0 whitespace-nowrap">
                <div class="mb-6 self-end">
                  <div class="text-center relative">
                    <button id="seller-notification-button" data-is-authenticated="{{isAuthenticated}}" class="inline-flex items-center justify-center bg-[#002F34] text-white font-semibold text-[16px] leading-[20px] h-[48px] w-[300px] px-[32px] py-[12px] rounded-[4px] border-0 cursor-pointer min-h-[48px]">
                      <span class="text-white text-base font-semibold leading-[20px]">Повідомлення</span>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full col-span-4 relative mb-6 p-0 flex flex-col">
          <div class="p-6 mb-6 bg-white rounded overflow-visible">
            <div class="text-[100%] font-sans box-border">
              <div class="flex flex-row items-center justify-between overflow-wrap break-words my-2 mb-6 text-[100%] font-sans box-border antialiased" data-testid="container">
                <span class="block text-xs text-[#406367] leading-4 break-words">
                  Опубліковано 
                  <span class="text-xs text-[#406367] leading-4 lowercase break-words">{{formatDate advertisement.publishDate}}</span>
                </span>
                <div class="flex items-center flex-shrink-0">
                  <div class="relative break-words">
                    <div>
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-6 h-6 text-[#002F34] cursor-pointer">
                        <path fill="currentColor" fill-rule="evenodd" d="M20.219 10.367L12 20.419 3.806 10.4A3.96 3.96 0 0 1 3 8c0-2.206 1.795-4 4-4a4.004 4.004 0 0 1 3.868 3h2.264A4.003 4.003 0 0 1 17 4c2.206 0 4 1.794 4 4 0 .868-.279 1.698-.781 2.367M17 2a5.999 5.999 0 0 0-5 2.686A5.999 5.999 0 0 0 7 2C3.692 2 1 4.691 1 8a5.97 5.97 0 0 0 1.232 3.633L10.71 22h2.582l8.501-10.399A5.943 5.943 0 0 0 23 8c0-3.309-2.692-6-6-6"></path>
                      </svg>
                    </div>
                  </div>
                </div>
              </div>
              <div class="flex flex-row items-center justify-between break-words my-2 mb-6 text-[100%] font-sans box-border antialiased">
                <h4 class="text-xl leading-[22px] font-normal text-[#002F34] break-words m-0 mb-1">{{advertisement.title}}</h4>
              </div>
              <div class="mb-6 text-[100%] font-sans box-border antialiased">
                <div class="my-2 text-[100%] font-sans box-border antialiased">
                  <div class="flex flex-wrap items-center gap-1 mb-6 text-[100%] font-sans box-border antialiased">
                    <h3 class="text-2xl font-bold text-[#002F34] m-0 mb-1 leading-[26px]">{{advertisement.price}} грн.</h3>
                  </div>
                </div>
              </div>
              <div class="flex flex-col mt-6 text-[100%] font-sans box-border antialiased">
                <div class="flex flex-col justify-between items-stretch gap-2 text-[100%] font-sans box-border antialiased">
                  <button id="advertisement-notification-button" data-is-authenticated="{{isAuthenticated}}" class="inline-flex items-center justify-center text-base font-bold leading-[18px] text-[#003035] border-2 border-[#003035] bg-transparent rounded-md min-h-[48px] px-2 py-0 cursor-pointer outline-none no-underline">
                    Повідомлення
                  </button>
                </div>
                <div class="mb-4 border-b-0">
                  <div class="mt-2 mb-4">
                    <a href="/" class="inline-flex items-center justify-center text-white bg-[#003034] border-4 border-[#003034] rounded-md text-base font-bold py-2 px-8 w-full">
                      Купити
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="notification-container" data-receiver-id="{{advertisement.user.userId}}" class="fixed hidden flex-col bg-white bottom-[59px] right-[60px] shadow-md min-w-[420px]">
    <div class="flex justify-between items-center py-[14px] px-5">
      <a href="/" class="flex">
        <div class="flex items-center">
          <div class="relative h-10 w-10 rounded-full overflow-hidden">
            <img src="{{#if advertisement.user.profileImageUrl}}{{advertisement.user.profileImageUrl}}{{else}}/icons/user-icon.svg{{/if}}" class="w-full h-full object-cover" />
          </div>
          <p class="ml-4 pt-1 text-[#002f34] text-base leading-5 font-bold mb-1 truncate">{{advertisement.user.name}}</p>
        </div>
      </a>
      <button id="close-notification-container-button" class="h-[18px] w-[18px]">
        X
      </button>
    </div>
    <div class="h-px w-full bg-[#dedede]"></div>
    <div class="flex py-[14px] px-5">
      <div class="flex justify-between">
        <div class="flex">
          <div class="relative h-[50px] w-[60px] overflow-hidden">
            <img src="{{advertisement.images.[0].imageUrl}}" class="w-full h-full object-cover" />
          </div>
          <div class="flex flex-col ml-5">
            <p class="text-[#002f34] text-base font-normal">{{advertisement.title}}</p>
            <p class="text-[#002f34] text-base font-bold">{{advertisement.price}} грн.</p>
          </div>
        </div>
      </div>
    </div>
    <div id="notifications" class="py-[14px] px-5 bg-[#f6f7f8] flex flex-col items-end gap-2 overflow-y-auto h-[352px] w-full"></div>
    <div class="py-[14px] px-5">
      <input id="send-notification-input" class="h-full w-full placeholder-gray-400 outline-none" placeholder="Напишіть повідомлення...">
    </div>
  </div>
</section>

<script src="/js/previous-page.js"></script>
<script src="/js/advertisement-image-slider.js"></script>
<script src="/js/send-notification.js"></script>