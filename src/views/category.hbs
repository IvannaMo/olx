<section class="pt-[72px] h-full flex flex-col">
  <div class="w-full flex-grow bg-[#f2f4f5]">
    <div class="w-full mx-auto px-4 pt-5 pb-20 relative z-[1] max-w-[1238px] antialiased">
      <div>
        <input type="hidden" id="categoryId" name="categoryId" value="{{category.categoryId}}">
        
        <div class="mb-8 w-full bg-inherit flex gap-x-[1px] antialiased">
          <div class="flex-grow relative mb-5 antialiased">
            <div class="cursor-pointer antialiased text-[#406367] absolute left-4 top-[14px]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                id="search-icon"
                class="fill-none antialiased align-middle h-6 w-6 mt-2 text-[#002F34]"
              >
                <path
                  fill="currentColor"
                  fill-rule="evenodd"
                  d="M10.5 17A6.508 6.508 0 0 1 4 10.5C4 6.916 6.916 4 10.5 4S17 6.916 17 10.5 14.084 17 10.5 17Zm6.669-1.245A8.452 8.452 0 0 0 19 10.5C19 5.813 15.187 2 10.5 2 5.813 2 2 5.813 2 10.5c0 4.687 3.813 8.5 8.5 8.5a8.451 8.451 0 0 0 5.254-1.831L20.586 22H22v-1.414l-4.831-4.831Z"
                  clip-rule="evenodd"
                ></path>
              </svg>
            </div>
            <input
              autocomplete="off"
              type="text"
              id="search"
              name="search"
              placeholder="Що шукаєте?"
              class="antialiased text-[#002F34] bg-white border-0 border-b-2 border-[#FFFFFF] rounded-l-md w-full h-[72px] py-[14px] pl-[48px] mb-1 text-base leading-5 outline-none"
              aria-describedby=""
              aria-invalid="false"
              aria-labelledby="undefined-label"
              value="{{searchQuery}}"
            />
          </div>
          <div class="relative">
            <button id="search-button" class="min-h-[40px] relative inline-flex items-center justify-center text-white font-bold text-base leading-5 bg-[#002F34] border-4 border-[#002F34] rounded-r-md h-[72px] p-3 px-7">
              Пошук
              <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="none" viewBox="0 0 24 24" class="text-white w-6 h-6 ml-1">
                <path fill="currentColor" fill-rule="evenodd" d="M10.5 17A6.508 6.508 0 0 1 4 10.5C4 6.916 6.916 4 10.5 4S17 6.916 17 10.5 14.084 17 10.5 17Zm6.669-1.245A8.452 8.452 0 0 0 19 10.5C19 5.813 15.187 2 10.5 2 5.813 2 2 5.813 2 10.5c0 4.687 3.813 8.5 8.5 8.5a8.451 8.451 0 0 0 5.254-1.831L20.586 22H22v-1.414l-4.831-4.831Z" clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>

        <div class="grid w-full bg-inherit grid-cols-12 gap-4 items-stretch">
          <h3 class="text-[#002f34] font-bold text-2xl leading-7 mb-4 antialiased">Фільтри</h3>
          <div class="m-0 p-0 col-span-12 relative w-full mb-0">
            <div class="grid w-full gap-4 grid-cols-10 items-stretch">
              <div class="m-0 p-0 col-span-2 relative w-full">
                <div class="w-full text-sm">
                  <p class="text-sm leading-5 text-[#002F34] mb-1.5">Категорія</p>
                  <select id="category" name="category">
                    {{#each categories}}
                    <option value="{{this.categoryId}}" {{#if (equals ../category.categoryId this.categoryId)}}selected{{/if}}>
                      {{this.name}}
                    </option>
                    {{/each}}
                  </select>
                </div>
              </div>
            </div>
          </div>
          <div class="h-px col-span-12 bg-[#7f9799] mb-6"></div>
          <div class="mb-6 p-0 col-span-12 relative w-full">
            <div class="flex items-center justify-end gap-4">
              <div class="flex items-center flex-shrink-0 gap-4">
                <div class="flex gap-2">
                  <span class="text-[#002f34] font-normal no-underline leading-5 text-sm whitespace-nowrap">Сортувати за:</span>
                  <div class="min-w-[250px]">
                    <select id="sort" name="sort">
                      <option value="newest" {{#if (equals sortBy "newest")}}selected{{/if}}>Найновіші</option>
                      <option value="cheap" {{#if (equals sortBy "cheap")}}selected{{/if}}>Найдешевші</option>
                      <option value="expensive" {{#if (equals sortBy "expensive")}}selected{{/if}}>Найдорожчі</option>
                    </select>
                  </div>
                </div>
  
              </div>
            </div>
          </div>
        </div>

        <div class="grid w-full grid-cols-12 gap-x-4 items-center">
          <div class="my-6 col-span-12">
            <span class="antialiased font-bold text-2xl leading-7 text-[#002f34] m-0">Ми знайшли {{count advertisements}} оголошень</span>
          </div>
        </div>

        <div class="w-full grid grid-cols-4 gap-2">
          {{#each advertisements}}
          <div class="rounded-b-md overflow-hidden">
            <a href="/advertisement/{{this.advertisementId}}" class="flex flex-col w-[304px] h-[228px]">
              <div class="cursor-pointer flex-grow h-full no-underline text-inherit">
                <div class="relative bg-gray-200 w-full h-full rounded-t-md overflow-hidden">
                  <div class="absolute inset-0 flex items-center justify-center">
                    {{#each this.images}}
                      {{#if this.primary}}
                      <img src="{{this.imageUrl}}" class="object-cover w-full h-full" />
                      {{/if}}
                    {{/each}}
                  </div>
                </div>
              </div>
            </a>

            <a href="/advertisement/{{this.advertisementId}}" class="bg-white flex flex-col justify-between min-h-[112px] flex-1 pt-4 pb-6 px-4 relative">
              <div>
                <p class="text-[14px] leading-[18px] text-[#002F34] mb-auto mr-6 overflow-hidden line-clamp-2">
                  <span class="text-inherit cursor-pointer no-underline flex-grow h-full">{{this.title}}</span>
                </p>
                <p class="text-[16px] leading-[20px] font-bold text-[#002F34] mt-1 block overflow-hidden text-ellipsis whitespace-nowrap w-full">
                  <span><span class="font-medium">{{this.price}}</span> грн.</span>
                </p>
              </div>

              <div>
                <p class="text-[#406367] text-xs leading-3 mt-6">{{this.location}}</p>
                <p class="text-[#406367] text-xs leading-3 mt-1">
                  <span>{{formatDate this.publishDate}}</span>
                </p>
              </div>

              <span class="flex items-start cursor-pointer absolute right-4 top-[18px]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1em" height="1em" class="text-[#002F34] w-4 h-4">
                  <path fill="currentColor" fill-rule="evenodd" d="M20.219 10.367 12 20.419 3.806 10.4A3.96 3.96 0 0 1 3 8c0-2.206 1.795-4 4-4a4.004 4.004 0 0 1 3.868 3h2.264A4.003 4.003 0 0 1 17 4c2.206 0 4 1.794 4 4 0 .868-.279 1.698-.781 2.367M17 2a5.999 5.999 0 0 0-5 2.686A5.999 5.999 0 0 0 7 2C3.692 2 1 4.691 1 8a5.97 5.97 0 0 0 1.232 3.633L10.71 22h2.582l8.501-10.399A5.943 5.943 0 0 0 23 8c0-3.309-2.692-6-6-6"></path>
                </svg>
              </span>
            </a>
          </div>
          {{/each}}
        </div>


        </div>
      </form>
    </div>
  </div>
</section>

<script src="/js/search.js"></script>
<script src="/js/choose-category.js"></script>
<script src="/js/sort-by.js"></script>